# Used to enable the use of sanitizers in gcc and clang.

import feature ;

feature.feature address-sanitizer
    : off on on-no-recover
    : propagated optional ;

feature.feature undefined-sanitizer
    : off on on-no-recover
    : propagated optional ;

feature.feature thread-sanitizer
    : off on on-no-recover
    : propagated optional ;
